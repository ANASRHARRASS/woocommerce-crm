# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = tab
indent_size = 4

# JavaScript files
[*.js]
indent_style = tab
indent_size = 4

# CSS files
[*.css]
indent_style = tab
indent_size = 4

# SCSS/Sass files
[*.{scss,sass}]
indent_style = tab
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Composer files
[composer.json]
indent_style = space
indent_size = 4

# Package.json
[package.json]
indent_style = space
indent_size = 2